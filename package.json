{
  "name": "gulp-package",
  "version": "1.0.0",
  "description": "Gulp package for creating web-sites and simple web-applications",
  "main": "gulpfile.js",
  "type": "module",
  "scripts": {
    "dev": "gulp",
    "build": "gulp build --build",
    "zip": "gulp deployZIP --build",
    "deploy": "gulp deployFTP --build",
    "eslint:check": "eslint 'src/**/*.js'",
    "eslint:fix": "eslint --fix 'src/**/*.js'",
    "prettier:check": "prettier --check 'src/**/*.{html,scss,js}'",
    "prettier:write": "prettier --write 'src/**/*.{html,scss,js}'",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix"
    ],
    "src/**/*.{html,scss,js}": [
      "prettier --write"
    ]
  },
  "author": "k0w4lk",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.27.7",
    "css-loader": "^6.6.0",
    "del": "^6.0.0",
    "eslint": "^8.25.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "fancy-log": "^2.0.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-file-include": "^2.3.0",
    "gulp-fonter-unx": "^0.3.0",
    "gulp-format-html": "^1.2.5",
    "gulp-group-css-media-queries": "^1.2.2",
    "gulp-html-img-wrapper": "^4.0.1",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^8.0.0",
    "gulp-newer": "^1.4.0",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.3",
    "gulp-sass": "^5.1.0",
    "gulp-ttf2woff2": "^4.0.1",
    "gulp-version-number": "^0.2.4",
    "gulp-webp": "^4.0.1",
    "gulp-webpcss": "^1.1.1",
    "gulp-zip": "^5.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "prettier": "^2.7.1",
    "sass": "^1.49.0",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "vinyl-ftp": "^0.6.1",
    "vinyl-named": "^1.1.0",
    "webp-converter": "2.2.3",
    "webpack": "^5.67.0",
    "webpack-stream": "^7.0.0"
  }
}
